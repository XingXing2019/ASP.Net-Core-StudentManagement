@model StudentCreateViewModel
@{
    ViewBag.Title = "Add Student";
}

    <form enctype="multipart/form-data" class="mt-3" asp-controller="home" asp-action="create" method="post">
        <div class="text-danger" asp-validation-summary="All"></div>
        <div class="form-group row">
            <label class="col-sm-2 col-form-label" asp-for="FirstName"></label>
            <div class="col-sm-10">
                <input class="form-control" placeholder="Please enter first name" asp-for="FirstName" />
                <span class="text-danger" asp-validation-for="FirstName"></span>
            </div>
        </div>

        <div class="form-group row">
            <label class="col-sm-2 col-form-label" asp-for="LastName"></label>
            <div class="col-sm-10">
                <input class="form-control" placeholder="Please enter last name" asp-for="LastName" />
                <span class="text-danger" asp-validation-for="LastName"></span>
            </div>
        </div>

        <div class="form-group row">
            <label class="col-sm-2 col-form-label" asp-for="Email"></label>
            <div class="col-sm-10">
                <input class="form-control" placeholder="Please enter email" asp-for="Email" />
                <span class="text-danger" asp-validation-for="Email"></span>
            </div>
        </div>

        <div class="form-group row">
            <label class="col-sm-2 col-form-label" asp-for="ClassName"></label>
            <div class="col-sm-10">
                <select class="custom-select mr-sm-2" asp-for="ClassName" asp-items="Html.GetEnumSelectList<ClassNameEnum>()">
                    <option value="">Please select class name</option>
                </select>
                <span class="text-danger" asp-validation-for="ClassName"></span>
            </div>
        </div>

        <div class="form-group row">
            <label class="col-sm-2 col-form-label" asp-for="Photo"></label>
            <div class="col-sm-10">
                <div class="custom-file">
                    <input class="form-control custom-file-input" asp-for="Photo" />
                    <label class="custom-file-label">Please select photo</label>
                    <span class="text-danger" asp-validation-for="Photo"></span>
                </div>
            </div>
        </div>

        <div class="form-group row">
            <div class="col-sm-10">
                <button type="submit" class="btn btn-primary">Add</button>
            </div>
        </div>

        @section Scripts{
            <script type="text/javascript">
                $(document).ready(function () {
                    $('.custom-file-input').on("change",
                        function () {
                            var fileLabel = $(this).next('.custom-file-label');
                            var fileName = $(this)[0].files[0].name;
                            fileLabel.html(fileName);
                        });
                });



            </script>
        }
    </form>

