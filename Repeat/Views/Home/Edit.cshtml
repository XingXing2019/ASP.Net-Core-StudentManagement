@model StudentEditViewModel
@{
    ViewData["Title"] = "Edit";
    var photoPath = "/img/" + @Model.ExistingPhotoPath;
}

    <div class="row justify-content-center mt-4">
        <div class="col-sm-4">
            <div class="card">
                <div class="card-header"><h1>@Model.FirstName</h1></div>
                <div class="card-body text-center">
                    <img class="card-img-top" src="@photoPath" alt="Alternate Text" />
                    <h4>Student Id: @Model.Id</h4>
                    <h4>Name: @Model.FirstName</h4>
                </div>
            </div>
        </div>
        <div class="col-sm-8">
            <form enctype="multipart/form-data" method="post" asp-controller="Home" asp-action="Edit">

                <div asp-validation-summary="All" class="text-danger"></div>
                <input hidden asp-for="Id" />
                <input hidden asp-for="ExistingPhotoPath" />
                <div class="form-group row">
                    <label class="col-sm-2 col-form-label" asp-for="FirstName"></label>
                    <div class="col-sm-10">
                        <input class="form-control" asp-for="FirstName" placeholder="Please enter first name" />
                        <span class="text-danger" asp-validation-for="FirstName"></span>
                    </div>
                </div>

                <div class="form-group row">
                    <label class="col-sm-2 col-form-label" asp-for="LastName"></label>
                    <div class="col-sm-10">
                        <input class="form-control" asp-for="LastName" placeholder="Please enter last name" />
                        <span class="text-danger" asp-validation-for="LastName"></span>
                    </div>
                </div>

                <div class="form-group row">
                    <label class="col-sm-2 col-form-label" asp-for="Email"></label>
                    <div class="col-sm-10">
                        <input class="form-control" asp-for="Email" placeholder="Please enter email" />
                        <span class="text-danger" asp-validation-for="Email"></span>
                    </div>
                </div>

                <div class="form-group row">
                    <label class="col-sm-2 col-form-label" asp-for="ClassName"></label>
                    <div class="col-sm-10">
                        <select class="custom-select mr-sm-2" asp-for="ClassName" asp-items="Html.GetEnumSelectList<ClassNameEnum>()">
                            <option value="">Please select class name</option>
                        </select>
                        <span class="text-danger" asp-validation-for="ClassName"></span>
                    </div>
                </div>

                <div class="form-group row">
                    <label class="col-sm-2 col-form-label" asp-for="Photo"></label>
                    <div class="col-sm-10">
                        <div class="custom-file">
                            <input class="form-control custom-file-input" asp-for="Photo" />
                            <label class="custom-file-label">Please select photo</label>
                        </div>
                    </div>
                </div>

                <div class="form-group row">
                    <div class="col-sm-6">
                        <button type="submit" class="btn btn-primary" asp-controller="home" asp-action="index">Back</button>
                        <button type="submit" class="btn btn-primary">Edit</button>
                    </div>
                </div>
            </form>
        </div>
        @section Scripts
        {
            <script type="text/javascript">
                $(document).ready(function() {
                    $('.custom-file-input').on('change',
                        function() {
                            var fileLabel = $(this).next('.custom-file-label');
                            var files = $(this)[0].files;
                            fileLabel.html(files[0].name);
                        });
                });
            </script>
        }
    </div>

